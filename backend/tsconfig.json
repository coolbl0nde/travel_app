{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js",
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "baseUrl": "src",
    "lib": ["es2022"],
    "module": "NodeNext",
    "target": "es2022",

    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": true,
  },
  "ts-node": { "transpileOnly": true },
  "include": ["**/*.ts", "**/*.json"]
}

